{
  "name": "@scayle/storefront-application-playwright",
  "private": true,
  "author": "SCAYLE Commerce Engine",
  "description": "End-to-End test suite for the SCAYLE Storefront Application.",
  "version": "1.0.0",
  "packageManager": "pnpm@10.13.1",
  "directories": {
    "test": "tests"
  },
  "dependencies": {
    "playwright": "1.54.0",
    "playwright-core": "1.54.0",
    "undici-types": "7.11.0"
  },
  "devDependencies": {
    "@playwright/test": "1.54.0",
    "@scayle/eslint-config-storefront": "4.5.13",
    "@types/node": "22.16.3",
    "dotenv": "16.6.1",
    "eslint": "9.31.0",
    "eslint-plugin-playwright": "2.2.0",
    "lighthouse": "12.7.1",
    "ts-node": "10.9.2",
    "typescript": "5.8.3"
  },
  "scripts": {
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "test:e2e:happy-path": "playwright test ./tests/e2e-happy-path.spec.ts",
    "test:e2e:lighthouse": "playwright test ./tests/lighthouse/*.ts --project chromium",
    "test:e2e": "playwright test ./tests/e2e*.spec.ts",
    "test:e2e:ui": "playwright test --ui"
  }
}
